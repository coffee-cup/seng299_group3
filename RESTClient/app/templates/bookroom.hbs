
<header>
  <div class="header-content main-header">
    <h1>Book a Room</h1>
    <hr>
  </div>
  <link rel="stylesheet" href="css/bootstrap-datepicker3.standalone.min.css">
</header>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-sm-offset-3 col-md-offset-3 col-lg-offset-4">
    <form id='make-booking-form' class="form-inline">

      <div class="form-group">
        <label for="sel1">Date:</label>
        {{view "select" id="inputDate" class="form-control" content=dates value=dateSelected}}
      </div>

      <div class="form-group">
        <label for="sel1">Start Time:</label>
        {{view "select" id="inputSTime" class="form-control" content=sTimes value=selectedSTime}}
      </div>

      <div class="form-group">
        <label for="sel1">End Time:</label>
        {{view "select" id="inputETime" class="form-control" content=eTimes value=selectedETime}}
      </div>


      <div class="form-group">
        <label for="sel1">Select Room:</label>
        {{view "select" id="inputRoom" class="form-control" content=room_ids value=selectedRoom}}
      </div>

      <div class="form-group">
        <label for="sel1">Extra Microphones:</label>
        {{view "select" id="inputMicrophones" class="form-control" content=extraMicrophones value=selectedMicrophones}}
      </div>

      <div class="form-group">
        <label for="sel1">Extra IPads:</label>
        {{view "select" id="inputIPads" class="form-control" content=extraIPads value=selectedIPads}}
      </div>



      <div id='create-booking-link' class="">
        <!--
        <button type="button" class="btn btn-lrg" data-toggle="modal" data-target="#bookingConfirmModal">Create Booking</button>
      -->
      <a data-toggle="modal" href="#bookingConfirmModal">Create Booking</a>
      </div>

    </form>
  </div>
</div>

<div id="roomCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
  <ol class="carousel-indicators">
    <li data-target="#roomCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#roomCarousel" data-slide-to="1"></li>
    <li data-target="#roomCarousel" data-slide-to="2"></li>
    <li data-target="#roomCarousel" data-slide-to="3"></li>
    <li data-target="#roomCarousel" data-slide-to="1"></li>
    <li data-target="#roomCarousel" data-slide-to="1"></li>
    <li data-target="#roomCarousel" data-slide-to="1"></li>
    <li data-target="#roomCarousel" data-slide-to="1"></li>
    <li data-target="#roomCarousel" data-slide-to="1"></li>
    <li data-target="#roomCarousel" data-slide-to="8"></li>
    <li data-target="#roomCarousel" data-slide-to="9"></li>
  </ol>

  <div class="carousel-inner" role="listbox">
    <div class="item active">

    </div>
  </div>

</div>

<div id="bookingConfirmModal" class='modal fade' role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Confirm your Booking</h4>
      </div>
      <div class="modal-body">
        <p>Date: {{dateSelected}}</p>
        <p>Start Time: {{selectedSTime}}</p>
        <p>End Time: {{selectedETime}}</p>
        <p>Room Selected: {{selectedRoom}}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sml btn-danger" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-lrg" data-dismiss="modal">Confirm</button>
      </div>
    </div>
  </div>
</div>

<script src="js/bootstrap-datepicker.min.js"></script>
