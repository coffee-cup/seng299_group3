
<header>
  <div class="header-content main-header">
    <h1>Book a Room</h1>
    <hr>
  </div>
</header>

<div class="row">
  <div class="col-sm-12 col-md-6 col-lg-4 col-md-offset-3 col-lg-offset-4">
    <form id='make-booking-form' class="form-inline">

      <div class="form-group">
        <label for="dateInput">Date</label>
        {{input type='text' class='form-control' id='inputDate' placeholder='Date' value=date}}
      </div>

      <div class="form-group">
        <label for="inputStartTime">Start Time</label>
        {{input type='text' class='form-control' id='inputStartTime' placeholder='Start Time' value=startTime}}
      </div>

      <div class="form-group">
        <label for="inputEndTime">End Time</label>
        {{input type='text' class='form-control' id='inputEndTime' placeholder='End Time' value=endTime}}
      </div>

      <div class="form-group">
        <label for="inputRoomId">Room Id</label>
        {{input type='text' class='form-control' id='inputRoomId' placeholder='Room Id' value=room_id}}
      </div>

      <div id='create-booking-link' class="">
        Create Booking
      </div>

    </form>
  </div>
</div>
