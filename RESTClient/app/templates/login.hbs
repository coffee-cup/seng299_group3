
<header>
  <div class="header-content main-header">
    <h1>Login</h1>
    <hr>
  </div>
</header>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-sm-offset-3 col-md-offset-3 col-lg-offset-4">

    <form {{action 'createSession' on='submit'}} id="login-form">
      <div class={{if error_username 'form-group has-error' 'form-group'}}>
        <label for="inputUsername">Username</label>
        {{input type="text" class="form-control" placeholder="Username" value=username}}
      </div>
      <div class={{if error_password 'form-group has-error' 'form-group'}}>
        <label for="inputPassword">Password</label>
        {{input type="text" class="form-control" placeholder="Password" value=password}}
      </div>
      <div class="error">
        {{error_message}}
      </div>
      <button type="submit" class="blue-button btn btn-default">Login</button>
      <span class="user-link">{{#link-to 'register'}}Create an Account{{/link-to}}</span>
    </form>
  </div>
</div>
